[Unit]
Description=uWSGI mozdef Alert Service
After=syslog.target

[Service]
# Requires systemd version 211 or newer
User=mozdef
Group=mozdef
ExecStart=/bin/bash -c 'cd /opt/mozdef/envs/mozdef/alerts; source /opt/mozdef/envs/mozdef/bin/activate; /opt/mozdef/envs/mozdef/bin/supervisord -c /opt/mozdef/envs/mozdef/alerts/supervisord.alerts.conf'
Restart=always
KillSignal=SIGQUIT
Type=forking
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target
Alias=alerts
